{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Uvicorn: FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "project.api:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "7999"
            ],
            "jinja": true,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal"
        }
    ]
}